<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link href="../css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="../css/main.css" rel="stylesheet" type="text/css" >
    <link href="../css/credentials.css" rel="stylesheet" type="text/css" >

    <link rel="icon" type="image/png" sizes="16x16" href="/res/todo_16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/res/todo_32.png">
    <link rel="icon" type="image/png" sizes="64x64" href="/res/todo_64.png">  

    <script src="../libs/jquery.min.js"></script>
    <script src="../libs/bootstrap.min.js"></script>
    <script src="../scripts/register.js"></script> 
    <script src="../scripts/account.js"></script>  
  </head>
  <body>
    <div class="application-header">
      <div class="container">
        <div class="btn-group pull-right" style="padding-top:10px;">
          <button type="button" class="locale-button btn btn-link dropdown-toggle" data-toggle="dropdown" style="text-decoration: none; padding-right: 0px; color:white">
            <span class="glyphicon glyphicon-globe"></span> <%= language %> <span class="glyphicon glyphicon-menu-down">
          </button>
          <ul class="dropdown-menu-right dropdown-menu scrollable-menu">
            <li><a class="locale dropdown-item" href="" data-locale="en-US">English (United States)</a></li>
            <li><a class="locale dropdown-item" href="" data-locale="pl-PL">Polski</a></li>
          </ul>
        </div>      
    </div>
    <div class="credentials-container container centered">
      <form action="/account" method="post" class="message-form">
        <div class="form-group">
          <label for="user"><%= resources.userName %></label>
          <input name="user" class="form-control input-default"readonly="readonly" value="<%= user.name %>">
        </div>
        <% if (locals.user_error) { %>
          <div class="alert alert-danger" role="alert"><%= user_error %></div>
        <% } %>        
        <div class="form-group">
          <label for="email"><%= resources.emailAddress %></label>
          <input name="email" class="form-control input-default" placeholder="<%= resources.emailAddressPlaceholder %>" value="<%= user.email %>">
        </div>
        <% if (locals.email_error) { %>
          <div class="alert alert-danger" role="alert"><%= email_error%></div>
        <% } %>        
        <button type="submit" class="form-control btn btn-primary"><strong><%= resources.acceptButtonText %></strong></button>
        <div style="padding-top: 10px;">
          <a class="pull-right" href="/home"><%= resources.cancelLinkText %></a>
        </div>
      </form>
    </div>  
  </body>
</html>