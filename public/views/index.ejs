	  <div class="container">
			<form action="/api/clear" method="post" class="text-right">
			  <input type="hidden" name="userid" value="<%= userid %>">
				<% if (messages.length != 0) { %>
					<button type="submit" value="clear" class="clear-button btn btn-danger btn-sm">Wyczyść listę</button>
				<% } else { %>
					<button type="submit" value="clear" class="clear-button btn btn-danger btn-sm disabled">Wyczyść listę</button>
				<% } %>
			</form>

			<h2 class="text-center"><%= title %><span class="items-counter badge"><%= messages.length %></span></h2>
	
			<form action="/api/add" method="post" class="message-form">
			  <input type="hidden" name="userid" value="<%= userid %>">
				<input type="text" name="message" class="form-control input-default" placeholder="Wpisz cokolwiek..." autofocus>
				<!-- <button type="submit" class="btn btn-default">Dodaj</button> -->
			</form>

	    <ul class="list-group">
	    	<% messages.reverse().forEach(function(msg) { %>
	    		<% include partials/message %>
	    	<% }) %>
	    </ul> 
    </div>

  </body>
</html>