<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<!-- CSS (load bootstrap from a CDN) -->
		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
		<style>
		    body { padding-top: 50px; }
		    .clear-button 
		    {
		        right: 0px;
    			margin: 20px 0px 20px 0px; 
		    }
		</style>
	</head>
	<body class="container">
		<h2><%= title %></h2>
		<form action="/add" method="post">
				<input type="text" name="message" class="form-control input-default" autofocus>
				<!-- <button type="submit" class="btn btn-default">Dodaj</button> -->
		</form>
		<form action="\clear" method="post">
			<% if (messages.length != 0) { %>
				<button type="submit" value="clear" class="clear-button btn btn-danger btn-default">Wyczyść listę</button>
			<% } else { %>
				<button type="submit" value="clear" class="clear-button btn btn-danger btn-default disabled">Wyczyść listę</button>
			<% } %>
		</form>
	    <ul class="list-group">
	    	<% messages.reverse().forEach(function(msg) { %>
	    		<% include partials/message %>
	    	<% }) %>
	    </ul> 
	    <footer>
	        <% include partials/footer %>
	    </footer>    
    </body>
</html>